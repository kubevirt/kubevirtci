#cloud-config
password: fedora
chpasswd: { expire: False }
ssh_pwauth: yes
write_files:
    - path: /etc/modules-load.d/mlx5.conf
      content: |
        mlx5_core
        mlx5_ib
    - path: /etc/modules-load.d/mlx4.conf
      content: |
        mlx4_core
        mlx4_ib
    - path: /etc/modules-load.d/i40e.conf
      content: |
        i40e
    - path: /etc/modules-load.d/igb.conf
      content: |
        igb
runcmd:
  - sudo dnf install -y kernel-modules-$(uname -r) qemu-guest-agent stress
  - sudo dnf clean all
  - sudo hostnamectl set-hostname ""
  - sudo hostnamectl set-hostname "" --transient
  - sudo systemctl start qemu-guest-agent
  - sudo sed -i /users-groups/d /etc/cloud/cloud.cfg
  - sudo shutdown
